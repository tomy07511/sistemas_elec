<!DOCTYPE html>
<html>

<head>
  <title>Resultado de Procesamiento</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      background-color: #f4f4f4;
    }

    .wrapper {
      max-width: 1200px;
      margin: 0 auto;
    }

    .content-wrapper {
      background-color: #ffffff;
      padding: 20px;
      border-radius: 8px;
      margin-bottom: 20px;
    }

    h1 {
      text-align: center;
      color: #0ba6bb;
    }

    .logo {
      width: 50%;
      text-align: center;
      margin: 20px auto;
      font-size: 24px;
      font-weight: bold;
    }

    .logo span.sd {
      color: #000000;
    }

    .logo span.lg {
      color: #ff0000;
    }

    h2 {
      margin-bottom: 10px;
      color: #0ba6bb;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    table, th, td {
      border: 1px solid #ddd;
    }

    th, td {
      padding: 8px;
      text-align: left;
    }

    tr:nth-child(even) {
      background-color: #f2f2f2;
    }

    p {
      line-height: 1.5;
    }
  </style>
</head>

<body>
  <div class="wrapper">
    <div class="content-wrapper">
      <h1>Resultado de Procesamiento</h1>

      <div class="logo">
        <span class="sd">SD</span>
        <span class="lg">LG</span>
      </div>

      {{#if success_msg}}
        <p class="success-msg">{{success_msg}}</p>
      {{/if}}

      {{#if error_msg}}
        <p class="error-msg">{{error_msg}}</p>
      {{/if}}

      {{#if excelData}}
        <h2>Datos del archivo Excel:</h2>
        <table>
          {{#each excelData}}
            <tr>
              {{#each this}}
                <td>{{this}}</td>
              {{/each}}
            </tr>
          {{/each}}
        </table>
      {{/if}}
    </div>
  </div>
</body>

</html>
